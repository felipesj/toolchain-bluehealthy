<div class="header">
  <div class="left">
    <a class="button-link" href="https://hub.jazz.net">
      <img class="bluemix-logo" src="Logo-BlueHealth.svg" />
      <span class="devopsservices-text"> <span class="bluemix-text">Blue Health</span></span>
    </a>
  </div>
  <div class="right">
    <button id="sign-up-pre" type="button" class="btn" onclick="signUp()">Sign up</button>
  </div>
</div>
<div class="content">

  <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
    <li data-target="#myCarousel" data-slide-to="5"></li>

  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active" style="text-align: center">
      <img src="fundo1.jpg" alt="Tela 1">
    </div>

    <div class="item">
      <img src="fundo2.jpg" alt="Tela 2">
    </div>

    <div class="item">
      <img src="fundo3.jpg" alt="Tela 3">
      <div class="button-container" >
        <button type="button" class="btn">Hoje</button>
        <button type="button" class="btn">Ontem</button>
        <button type="button" class="btn">Semana passda</button>
        <button type="button" class="btn">Mais de 1 semana</button>
      </div>
    </div>

    <div class="item">
      <img src="fundo3.jpg" alt="Tela 4">
      <div class="button-container" >
        <div class="input-group">
          <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
          <button type="button" class="btn" onclick="registerActivity()">Caminhada</button>
        </div>        
        <div class="input-group">
          <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
          <button type="button" class="btn" onclick="registerActivity()">Corrida</button>
        </div>        
        <div class="input-group">
          <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
          <button type="button" class="btn" onclick="registerActivity()">Natação</button>
        </div>        
        <div class="input-group">
          <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
          <button type="button" class="btn" onclick="registerActivity()">Musculação</button>
        </div>        
        <div class="input-group">
          <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
          <button type="button" class="btn" onclick="registerActivity()">Outro</button>
        </div>        
      </div>
    </div>

    <div class="item">
      <img src="fundo3.jpg" alt="Tela 5">
      <div class="button-container" >
        <button type="button" class="btn">15min</button>
        <button type="button" class="btn">30min</button>
        <button type="button" class="btn">1h</button>
        <button type="button" class="btn">2h ou mais</button>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
<div id="activity-sucess-msg" class="alert-msg">
  <div class="left">  
    <div class="alert alert-success" role="alert">Registro efetuado com sucesso</div>
  </div>
  <div class="right">
    <button id="sign-up-pos" type="button" class="btn" onclick="signUpAfterActivity()">Sign up</button>
  </div>
</div>  

